{
    "version": "0.2.0",
    "description": "Comic and Manga reader, written with Node.js and using Electron",
    "architecture": {
        "64bit": {
            "url": "https://github.com/ollm/OpenComic/releases/download/v0.2.0/OpenComic.Setup.0.2.0.exe#dl.7z"
	}
    },
    "extract_dir": "$PLUGINDIR",
    "installer": {
        "script": [
            "Remove-Item \"$dir\\*\" -Exclude 'app-64.7z'",
            "Expand-7zipArchive \"$dir\\app-64.7z\" \"$dir\" -Removal"
        ]
    },
    "bin": "OpenComic.exe",
    "shortcuts": [
    	["OpenComic.exe", "OpenComic"]
    ],

    "homepage": "https://github.com/ollm/OpenComic",
    "checkver": "github",
    "autoupdate": {	
        "url": "https://github.com/ollm/OpenComic/releases/download/v$version/OpenComic.Setup.$version.exe#dl.7z"
    }
}
